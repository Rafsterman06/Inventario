<!doctype html>
<html lang="es">
    <head>
        <meta charset="utf-8">
        <title>La Ceiba</title>    
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="author" content="Videojuegos & Desarrollo">
        <meta name="description" content="Ejemplo de formulario de acceso basado en HTML5 y CSS">
        <meta name="keywords" content="login,formulariode acceso html">
        <link rel="shortcut icon" href="/sources/img/icons8-oak-tree-16.png" type="image/x-icon">
        <link href="https://fonts.googleapis.com/css?family=Nunito&display=swap" rel="stylesheet"> 
        <link rel="stylesheet" href="../sources/css/categorias.css">
    </head>
    <body>
		<div id="contenedor">
			<div id="contenedorcentrado">
				<div id="login">
					<form id="loginform" action="/crudcategoria">
						<fieldset>
							<div class="divinput">
								<label for="id_cat">ID</label>
								<input type="text" name="id_cat" id="id_cat" placeholder="ID" required>
                            </div>
                            <div class="divinput">
								<label for="nombre">Nombre</label>
                                <input type="text" name="nombre" id="nombre" placeholder="Nombre" required>
                            </div>
                            <div class="divinput">
								<label for="descripcion">Descripcion</label>
								<input type="text" name="descripcion" id="descripcion" placeholder="Descripcion" required>
                            </div>
                            <div class="divbutton">
                                <button id="create" onclick="createe()">Create</button>
                                <button id="read" onclick=" ">Read</button>
                                <button id="update" onclick="">Update</button>
                                <button id="delete" onclick="">Delete</button>
                                <button id="buscar" onclick="">Buscar</button>
                                <script>
                                    
                                </script>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
            <div id="contenedortabla">
                <table>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Descripcion</th>
                    </tr>
                    <tbody id="tablacategoria">
                        <% if (dato.length>0) { %>
                            <% for( let index = 0; index < dato.length; index++ ) { %>
                                <tr><td><%=dato[index].id_cat%></td><td><%=dato[index].nombre%></td><td><%= dato[index].Descripcion %></td></tr>
                            <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </body>
</html>